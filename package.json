{
    "name": "simple-vector",
    "version": "0.0.13",
    "description": "A 2D Vector library",
    "main": "dist/simple-vector.umd.js",
    "types": "dist/types/index.d.ts",
    "module": "dist/simple-vector.esm.js",
    "exports": {
        ".": {
            "require": "./dist/simple-vector.cjs",
            "import": "./dist/simple-vector.esm.js",
            "types": "./dist/types/index.d.ts"
        }
    },
    "type": "module",
    "engines": {
        "node": "24.x"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "check": "npm run lint && npm run prettier",
        "prettier": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
        "prettier:fix": "prettier -w 'src/**/*.ts' 'tests/**/*.ts'",
        "lint": "eslint",
        "lint:fix": "npm run lint --fix",
        "tests": "node --test",
        "tests:watch": "node --test --watch",
        "tests:ci": "node --test --test-reporter=junit --test-reporter-destination=tests_results.xml",
        "tests:coverage": "node --test --experimental-test-coverage --test-reporter=tap --test-reporter-destination=coverage.lcov",
        "build": "npm run build:js && npm run build:types && npm run build:doc",
        "build:doc": "typedoc",
        "build:js": "rollup -c rollup.config.js",
        "build:types": "tsc -d --emitDeclarationOnly",
        "build:watch": "concurrently 'npm run build:watch:js' 'npm run build:watch:types' 'npm run build:watch:doc'",
        "build:watch:doc": "typedoc --watch",
        "build:watch:js": "rollup -c rollup.config.js -w",
        "build:watch:types": "tsc -d --emitDeclarationOnly -w",
        "serve:doc": "npx serve docs/"
    },
    "devDependencies": {
        "@cspell/eslint-plugin": "^9.2.1",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.33.0",
        "@rollup/plugin-typescript": "^12.1.4",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.39.0",
        "concurrently": "^9.2.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.6.2",
        "rollup": "^4.50.0",
        "typedoc": "^0.28.10",
        "typescript": "^5.9.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/statox/simple-vector.ts.git"
    },
    "keywords": [
        "vector",
        "math",
        "2d",
        "victor.js"
    ],
    "author": "statox",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/statox/simple-vector.ts/issues"
    },
    "homepage": "https://statox.github.io/simple-vector.ts/"
}
