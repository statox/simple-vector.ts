{
    "name": "@statox/vector",
    "version": "0.0.8",
    "description": "A 2D Vector library",
    "main": "./dist/index.js",
    "types": "./dist/index.d.js",
    "type": "module",
    "engines": {
        "node": "24.x"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "check": "npm run lint && npm run prettier",
        "prettier": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
        "prettier:fix": "prettier -w 'src/**/*.ts' 'tests/**/*.ts'",
        "lint": "eslint",
        "lint:fix": "npm run lint --fix",
        "tests": "node --test",
        "tests:watch": "node --test --watch",
        "tests:ci": "node --test --test-reporter=junit --test-reporter-destination=tests_results.xml",
        "tests:coverage": "node --test --experimental-test-coverage --test-reporter=tap --test-reporter-destination=coverage.lcov",
        "build": "npm run build:package && npm run build:doc",
        "build:package": "rm -fr dist/ && tsc",
        "build:doc": "typedoc",
        "build:watch": "rm -fr dist/ && tsc -w",
        "serve:docs": "npx serve docs/"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.33.0",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.39.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.6.2",
        "typedoc": "^0.28.10",
        "typescript": "^5.9.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/statox/ts-vector.git"
    },
    "keywords": [
        "vector",
        "math",
        "2d"
    ],
    "author": "statox",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/statox/ts-vector/issues"
    },
    "homepage": "https://github.com/statox/ts-vector#readme"
}
